	<!-- Trascrizione testo del documento -->
	<text xml:id="text_55_56_57" xml:lang="it" hand="#EA" type="diary" subtype="manuscript">

		<body>

			<div>
				 
				<ab type="page" n="155" xml:lang="it">

					<!-- Indica l'inizio di una pagina in un documento (Pagina 55)-->
					<pb xml:id="pag55" facs="#fs_pag55"/>

					<!-- Riga 1; Pagina 55-->
					<lb xml:id="r1p55" facs="#gr_pag55_r1" n="1" break="no"/>
					fa<pc type="comma">,</pc> in un alberghetto di <placeName><settlement ref="#TP" type="municipality"><choice><abbr type="acronym">T.P.</abbr><expan>Torre Pellice</expan></choice></settlement></placeName> scherzare
				
					<!-- Riga 2; Pagina 55-->
					<lb xml:id="r2p55" facs="#gr_pag55_r2" n="2" break="no"/>
					sulla vita di banda<pc type="comma">,</pc> senza sentirsi tanto

					<!-- Riga 3; Pagina 55-->
					<lb xml:id="r3p55" facs="#gr_pag55_r3" n="3" break="yes"/>
					vicina la <choice><orig>Morte</orig><reg>morte</reg></choice><pc type="period">.</pc> In ultimo lo interroga<pc type="hyphenation">=</pc>

					<!-- Riga 4; Pagina 55-->
					<lb xml:id="r4p55" facs="#gr_pag55_r4" n="4" break="yes"/>
					rono sulla sua famiglia e sulla sua reli<pc type="hyphenation">=</pc>

					<!-- Riga 5; Pagina 55-->
					<lb xml:id="r5p55" facs="#gr_pag55_r5" n="5" break="no"/>
					gione<pc type="comma">,</pc> ma <del rend="overstrike" hand="#EA">si <unclear reason="illegible" cert="low"><supplied reason="illegible" resp="#DM" cert="low">non</supplied></unclear></del> non volle dire nulla<pc type="period">.</pc>

					<!-- Riga 6; Pagina 55-->
					<lb xml:id="r6p55" facs="#gr_pag55_r6" n="6" break="yes"/>
					Avrebbe potuto<pc type="comma">,</pc> meglio di ogni altro<pc type="comma">,</pc> fuggi<pc type="hyphenation">=</pc>

					<!-- Riga 7; Pagina 55-->
					<lb xml:id="r7p55" facs="#gr_pag55_r7" n="7" break="no"/>
					re in <placeName><country ref="CH">Svizzera</country></placeName> dove ha la famiglia<pc type="comma">,</pc>

					<!-- Riga 8; Pagina 55-->
					<lb xml:id="r8p55" facs="#gr_pag55_r8" n="8" break="no"/>
					ma preferì restare con noi per combattere<pc type="period">.</pc>

					<!-- Riga 9; Pagina 55-->
					<lb xml:id="r9p55" facs="#gr_pag55_r9" n="9" break="no"/>
					Penso a<del rend="scribble" hand="#EA">i</del> suo<subst><del rend="overstrike" hand="#EA">i genitori</del><add hand="#EA" place="above"> padre e sua madre</add></subst><pc type="comma">,</pc> ad Alda che

					<!-- Riga 10; Pagina 55-->
					<lb xml:id="r10p55" facs="#gr_pag55_r10" n="10" break="no"/>
					una sera <subst><del rend="overwrite" hand="#EA">4</del><add>5</add></subst> o <subst><del rend="overwrite" hand="#EA">5</del><add>6</add></subst> anni fa, a <placeName>Courmayeur</placeName>

					<!-- Riga 11; Pagina 55-->
					<lb xml:id="r11p55" facs="#gr_pag55_r11" n="11" break="no"/>
					piangeva <choice><sic>perchè</sic><corr resp="#DM">perché</corr></choice> tardava a tornare

					<!-- Riga 12; Pagina 55-->
					<lb xml:id="r12p55" facs="#gr_pag55_r12" n="12" break="yes"/>
					da una gita<pc type="comma">,</pc> penso anche ai miei ge<pc type="hyphenation">=</pc>

					<!-- Riga 13; Pagina 55-->
					<lb xml:id="r13p55" facs="#gr_pag55_r13" n="13" break="no"/>
					nitori che quando riceveranno questa

					<!-- Riga 14; Pagina 55-->
					<lb xml:id="r14p55" facs="#gr_pag55_r14" n="14" break="no"/>
					notizia temeranno di più per me<pc type="period">.</pc>

					<!-- Riga 15; Pagina 55-->
					<lb xml:id="r15p55" facs="#gr_pag55_r15" n="15" break="yes"/>
					Il giovane di <placeName><settlement ref="#TP" type="municipality"><choice><abbr type="acronym">T.P.</abbr><expan>Torre Pellice</expan></choice></settlement></placeName> <subst><del rend="overwrite" hand="#EA">m</del><add>c</add></subst>i raccontò che i rap<pc type="hyphenation">=</pc>

					<!-- Riga 16; Pagina 55-->
					<lb xml:id="r16p55" facs="#gr_pag55_r16" n="16" break="no"/>
					porti fra le due bande sono sempre meno

					<!-- Riga 17; Pagina 55-->
					<lb xml:id="r17p55" facs="#gr_pag55_r17" n="17" break="no"/>
					buoni<pc type="semicolon">;</pc> anche <persName ref="#GS"><choice><abbr>G<pc type="period">.</pc></abbr><expan resp="#DM" cert="medium">Giorio</expan></choice></persName> riconosce che io ho ricevuto

					<!-- Riga 18; Pagina 55-->
